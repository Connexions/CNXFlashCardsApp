<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingLeft="15dip"
    android:paddingRight="15dip">
    
    <TextView 
        android:id="@+id/deckNameText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/deckAuthorsText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/deckSummaryText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/numberOfCardsText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <Button 
        android:id="@+id/studyModeButton"
        android:text="@string/studyModeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <Button 
        android:id="@+id/selfTestModeButton"
        android:text="@string/selfTestModeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <Button 
        android:id="@+id/quizModeButton"
        android:text="@string/quizModeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

</ScrollView>