<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
	    android:id="@+id/deckPositionText"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:paddingTop="30.0dip"/>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <Button 
	        android:id="@+id/prevCardButton"
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:text=" &lt; "
	        android:layout_weight="1.0"/>
	    
	    <TextView 
	        android:id="@+id/termText"
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:text="Term will go here."
	        android:gravity="center"
	        android:layout_weight="3.0"/>
	    
	    <Button 
	        android:id="@+id/nextCardButton"
	        android:layout_width="0.0dip"
	        android:layout_height="wrap_content"
	        android:text=" &gt; "
	        android:layout_weight="1.0"/>
	    
	</LinearLayout>
	    
    <RadioGroup 
        android:id="@+id/answersRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
        
        <RadioButton 
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1 here."/>
        
        <RadioButton 
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2 here."/>
        
        <RadioButton 
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3 here."/>
        
    </RadioGroup>

</LinearLayout>