<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cnx.flashcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:targetSdkVersion="15" android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CNXFlashCardsTheme">
        
        <provider android:name=".database.CardProvider" android:authorities="org.cnx.flashcards.CardProvider" />
        <provider android:name=".database.DeckProvider" android:authorities="org.cnx.flashcards.DeckProvider" />
        
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <activity
            android:name="org.cnx.flashcards.activities.CardActivity">
        </activity>
        
        <activity
            android:name = "org.cnx.flashcards.activities.StudyCardActivity" >
        </activity>
        
        <activity
            android:name="org.cnx.flashcards.activities.SelfTestCardActivity"  >
        </activity>
        
        <activity
            android:name="org.cnx.flashcards.activities.QuizCardActivity" >
        </activity>
        
        <activity
            android:name=".activities.DownloadedDeckInfoActivity" >
        </activity>
        
        <activity 
            android:name="org.cnx.flashcards.activities.SearchActivity" 
            android:configChanges="orientation|screenSize">
        </activity>
        
        <activity 
            android:name="org.cnx.flashcards.activities.QuizEndActivity" >
        </activity>
        
        <activity 
            android:name="org.cnx.flashcards.activities.DeckListActivity" >
        </activity>
        
        <activity 
            android:name="org.cnx.flashcards.activities.HelpActivity" >
        </activity>
        
        <activity 
            android:name="org.cnx.flashcards.activities.DeckEditorActivity" >
         </activity>
         
        <activity 
            android:name="org.cnx.flashcards.activities.CardEditorActivity" >
         </activity>
         
        <activity 
            android:name="org.cnx.flashcards.activities.CardListActivity" >
         </activity>
    </application>
    
    
    

</manifest>